<%= form_for [:admin, @tour] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.label :category_id %>
    <%= f.select :category_id, options_for_select(convert_category,
      selected: @tour.category_id), {}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
   <%= f.label :duration %>
    <%= f.number_field :duration, class: "form-control" %>
  </div>
  <div class="form-group">
   <%= f.label :price %>
    <%= f.number_field :price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.fields_for :picture, @tour.picture || @tour.build_picture do |build| %>
      <%= build.file_field :picture_link, class: "form-control" %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>

<% provide :title, t(".tour") %>
<div class="row">
  <div class="col-md-12">
    <%= link_to new_admin_tour_path, class: "btn btn-outline-primary mb-3" do %>
      <i class="fa fa-plus"></i>
      <%=  t ".create_tour" %>
    <% end %>
    <div class="border-search">
      <%= render partial: "search", search: @search %>
    </div>
    <div class="card shadow mb-4 custom-card">
      <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"><%= t ".tour_list" %></h6>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered w-100" cellsapcing="0">
            <tr>
              <thead>
                <th><%= t ".stt" %></th>
                <th><%= t ".name" %></th>
                <th><%= t ".duration" %></th>
                <th><%= t ".price" %></th>
                <th><%= t ".category_name" %></th>
                <th><%= t ".action" %></th>
              </thead>
            </tr>
            <tbody>
              <%= render partial: "tour", collection: @tours, as: :tour %>
            </tbody>
          </table>
          <%= paginate @tours, theme: Settings.theme.paging if @tours.any? %>
        </div>
      </div>
    </div>
  </div>
</div>
